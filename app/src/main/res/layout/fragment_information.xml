<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.am.demo.taskapp.InformationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_fragmentInformation"
        android:orientation="vertical"
        android:padding="@dimen/ll_main_padding"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/b_editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:layout_gravity="right"
            />

        <TextView
            android:id="@+id/tv_taskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:gravity="center"
            android:layout_marginBottom="@dimen/title_margin_bottom"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/tv_taskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ll_description_padding"
            android:lineSpacingExtra="@dimen/line_spacing_extra"
            tools:text="@string/description_example"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_checkboxList"
            android:paddingLeft="20dp"/>

    </LinearLayout>
    </ScrollView>

</FrameLayout>
